{
  "compilerOptions": {
    "target": "esnext",
    "lib": ["esnext"],
    "noEmit": true,
    "jsx": "react-native",
    "strict": true,
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "removeComments": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true
  },
  "exclude": ["node_modules", "**/*.spec.ts", "**/*.test.ts"],
  "compileOnSave": true
}